<!DOCTYPE html>
<html>
  <%- include('../views/partials/head'); %>
  <body>
    <%- include('../views/partials/header'); %>

    <main class="bg-body pt-5 pb-5">
      <div class="container">
        <div class="row">
          <div class="col-md">
            <h3>Inicio</h3>
            <div class="tweetBox">
              <form action="/username/saveTweet" method="POST">
                <div class="row">
                  <div class="col-md-1">
                    <div class="profileImage rounded-circle">
                      <!--user.image -->
                    </div>
                  </div>
                  <div class="col-md-11">
                    <input type="hidden" name="_id" value="<%= user._id %>" />
                    <div class="form-group tweetInput">
                      <textarea
                        class="form-control"
                        name="text"
                        id="tweetText"
                        rows="3"
                        placeholder="¿Qué está pasando?"
                      ></textarea>
                    </div>
                    <div
                      class="tweetAttachSubmit d-flex justify-content-end pr-3 pb-3"
                    >
                      <button
                        type="submit"
                        class="btn btn-primary rounded-pill"
                      >
                        Twittear
                      </button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
            <div class="tweetsFollowings mt-3">
              <form action="" method="POST">
                <div class="row">
                  </div>
                  <div class="col">
                    <div class="tweetDescriptionFollowing">
                      <div class="container">
                        <div class="textInsideFollowing">
                          <div class="container border">
                            <% userSearch.forEach(user => { %>
                            <img src="<%= user.image %>" alt="imagen-perfil" class="rounded-circle"/>
                            <a href="localhost:3000/username/<%= user.username %>"
                              ><%= user.username %></a
                            >
                            <% }) %>
                            <% tweetSearch.forEach(tweet => { %>
                            <p><%= tweet.text %></p>
                            <p><%= tweet.date %></p>
                            <div class="likesBox">
                              <a href="" class="btn"
                                ><i class="far fa-heart"></i
                              ></a>
                              <p>
                                <!-- objeto de likes para ir mostrando numeros -->
                              </p>
                            </div>
                            <% }) %>
                          </div>
                          <p><!-- contenido del tweet del following --></p>
                        </div>
                      </div>
                      
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%-include('../views/partials/footer'); %>
    <%-include('../views/partials/scripts'); %>
  </body>
</html>

<!DOCTYPE html>
<html>
  <%- include('../views/partials/head'); %>
  <body>
    <%- include('../views/partials/header'); %>

    <div class="container pb-4">
      <h1 class="my-4 text-center">Edit Article</h1>
      <div class="row">
        <div class="col">
          <div class="card mb-4">
            <!-- /.card-header -->
            <div class="card-body">
              <form
                class=""
                action="/admin/update/<%= article.id %>"
                method="post"
                data-parsley-validate
              >
                <div class="form-group">
                  <h5>
                    <label for="title">Title</label>
                  </h5>
                  <input
                    type="text"
                    name="title"
                    value="<%= article.title %>"
                    placeholder="Enter the title..."
                    class="form-control"
                    required="true"
                    data-parsley-minlength="6"
                  />
                </div>
                <h5>
                  <label for="content">Content</label>
                </h5>
                <div class="form-group">
                  <textarea
                    class="form-control"
                    aria-label="With textarea"
                    type="text"
                    name="content"
                    value="<%= article.content %>"
                    style="height: 96px"
                    data-parsley-minlength="20"
                    required="true"
                  ></textarea>
                </div>
                <div class="form-group">
                  <h5>
                    <label for="title">Image URL</label>
                  </h5>
                  <input
                    type="url"
                    name="image"
                    value="<%= article.img %>"
                    placeholder="Enter the image url..."
                    class="form-control"
                    required="true"
                  />
                </div>
                <button type="submit" name="button" class="btn btn-success">
                  Update
                </button>
              </form>
            </div>
            <!-- /.card-body -->
          </div>
          <hr />
        </div>
      </div>
    </div>

    <%-include('../views/partials/footer'); %>
    <%-include('../views/partials/scripts'); %>
  </body>
</html>
<!DOCTYPE html>
<html>
  <%- include('../views/partials/head'); %>
  <body>
    <%-include('../views/partials/header'); %>

    <div class="bg-body">
      <div class="container pt-5 pb-5">
        <div class="card color-container">
          <div>
            <img src="<%=article.img%>" class="card-img p-5" alt="image-article" />
          </div>
    
          <div class="card-body p-5 body-article">
            <h5 class="card-title"><%=article.title%></h5>
            <p class="card-text"><%=article.content%></p>
            <div class="grid-layout">
              <div class="User-card">
                <p>User : <%=article.user.firstname%> <%=article.user.lastname%></p>
                <p>Contact email : <%=article.user.email%></p>
              </div>
            </div>
          </div>
          <div class="container">
            <h3>Comments:</h3>
            <% comment.forEach(comment => { %>
            <div class="comment-container">
              <h5>User: <%=comment.user%></h5>
              <hr />
              <p><%=comment.content%></p>
              <a
                href="/home/comments/<%= comment.id %>"
                class="btn btn-sm btn-danger"
              >
                Delete
              </a>
            </div>
            <% }) %>
          </div>
          <div class="card-body">
            <form
              class=""
              action="/home/comments"
              method="post"
              data-parsley-validate
            >
              <div class="form-group">
                <textarea
                  class="form-control"
                  aria-label="With textarea"
                  type="text"
                  name="content"
                  value=""
                  placeholder="Add a comment..."
                  required="true"
                  style="height: 96px"
                  data-parsley-minlength="20"
                ></textarea>
              </div>
              <div class="form-group">
                <input
                  type="text"
                  name="user"
                  value=""
                  placeholder="Add your name..."
                  class="form-control"
                  required="true"
                  data-parsley-minlength="6"
                />
              </div>
              <input type="hidden" name="articleId" value="<%= article.id %> " />
              <button
                type="submit"
                name="button"
                class="btn btn-success mt-1"
                value="Upload"
              >
                Send
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%-include('../views/partials/footer'); %>
    <%-include('../views/partials/scripts'); %>
  </body>
</html>

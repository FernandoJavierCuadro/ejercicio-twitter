<!DOCTYPE html>
<html>
  <%-include('../views/partials/head'); %>
  <body>
    <%-include('../views/partials/header'); %>

    <div id="formLogin" class="container">
      <div class="card mb-4 mt-5">
        <div class="card-header">
          <h3>Log In</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <form class="" action="/login" method="post" data-parsley-validate>
            <div class="form-group">
              <h5>
                <label for="email">Email</label>
              </h5>
              <input
                type="text"
                name="email"
                value=""
                id="email"
                placeholder="Enter your email..."
                class="form-control"
                required="true"
                data-parsley-minlength="6"
              />
            </div>
            <div class="form-group">
              <h5>
                <label for="password">Password</label>
              </h5>
              <input
                type="password"
                name="password"
                value=""
                id="password"
                placeholder="Enter your password..."
                class="form-control"
                required="true"
                data-parsley-minlength="6"
              />
            </div>
    
            <button
              type="submit"
              name="button"
              class="btn btn-primary mt-1"
              value="Upload"
            >
              Log In
            </button>
            <a
              class="btn btn-success ml-2 mt-1"
              href="http://localhost:3000/registro"
              >Sign Up</a
            >
            <a href="/auth/facebook">
              <p class="text-right">Login with Facebook</p>
            </a>
          </form>
        </div>
        <!-- /.card-body -->
      </div>
    </div>

    <%-include('../views/partials/footer'); %>
    <%-include('../views/partials/scripts'); %>
  </body>
</html>

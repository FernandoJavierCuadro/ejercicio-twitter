<!DOCTYPE html>
<html>
  <%-include('../views/partials/head'); %>
  <body>
    <div id="formSignUp" class="container">
      <div class="card mb-4 mt-5">
        <div class="card-header">
          <h3>Sign Up</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <form class="" action="/registro" method="post" data-parsley-validate>
            <div class="form-group">
              <h5>
                <label for="name">Name</label>
              </h5>
              <input
                type="text"
                name="name"
                value=""
                id="name"
                placeholder="Enter your name..."
                class="form-control"
              />
            </div>
            <div class="form-group">
              <h5>
                <label for="lastname">Last Name</label>
              </h5>
              <input
                type="text"
                name="lastname"
                value=""
                id="lastname"
                placeholder="Enter your last name..."
                class="form-control"
              />
            </div>
            <div class="form-group">
              <h5>
                <label for="email">Email</label>
              </h5>
              <input
                type="email"
                name="email"
                value=""
                id="email"
                placeholder="Enter your email..."
                class="form-control"
              />
            </div>
            <div class="form-group">
              <h5>
                <label for="username">Username</label>
              </h5>
              <input
                type="text"
                name="username"
                value=""
                id="username"
                placeholder="Enter your username..."
                class="form-control"
              />
            </div>
            <div class="form-group">
              <h5>
                <label for="password">Password</label>
              </h5>
              <input
                type="password"
                name="password"
                value=""
                id="password"
                placeholder="Enter your password..."
                class="form-control"
              />
            </div>
            <div class="form-group">
              <h5>
                <label for="description">Description</label>
              </h5>
              <textarea
                name="description"
                type="text"
                cols="30"
                rows="3"
                value=""
                id="description"
                placeholder="Enter your description..."
                class="form-control"
              ></textarea>
            </div>
            <div class="form-group">
              <h5>
                <label for="username">Profile image</label>
              </h5>
              <input
                type="text"
                name="image"
                value=""
                id="image"
                placeholder="Enter your URL image..."
                class="form-control"
              />
            </div>

            <button
              type="submit"
              name="button"
              class="btn btn-success mt-1"
              value="Upload"
            >
              Save
            </button>
          </form>
        </div>
        <!-- /.card-body -->
      </div>
    </div>

    <%-include('../views/partials/footer'); %>
    <%-include('../views/partials/scripts'); %>
  </body>
</html>

<!DOCTYPE html>
<html>
  <%- include('../views/partials/head'); %>
  <body>
    <%- include('../views/partials/header'); %>
    
    <main class="bg-body pt-5 pb-5">
      <div class="container">
        <div class="card-columns">
          <% articles.forEach(element => { %>
          <div class="card shadow-lg p-3 mb-5 bg-white rounded">
            <img
              src="<%= element.img %>"
              class="card-img-top pl-2 pt-2 pr-2"
              alt="..."
            />
            <div class="card-body" style="overflow: visible">
              <a href="http://localhost:3000/home/articles/<%= element.title %>">
                <h5 class="card-title"><%= element.title %></h5>
              </a>
              <p class="card-text" id="cut-text"><%= element.content %></p>
              <small class="text-muted"> <%= element.date %> </small>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>

    <%-include('../views/partials/footer'); %>
    <%-include('../views/partials/scripts'); %>
  </body>
</html>

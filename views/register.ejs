<!DOCTYPE html>
<html>
  <%-include('../views/partials/head'); %>
  <body>
    <%-include('../views/partials/header'); %>

    <div id="formSignUp" class="container">
      <div class="card mb-4 mt-5">
        <div class="card-header">
          <h3>Sign Up</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <form class="" action="/registro" method="post" data-parsley-validate>
            <div class="form-group">
              <h5>
                <label for="firstname">Name</label>
              </h5>
              <input
                type="text"
                name="firstname"
                value=""
                id="firstname"
                placeholder="Enter your name..."
                class="form-control"
                required="true"
                data-parsley-minlength="6"
              />
            </div>
            <div class="form-group">
              <h5>
                <label for="lastname">Last Name</label>
              </h5>
              <input
                type="text"
                name="lastname"
                value=""
                id="lastname"
                placeholder="Enter your last name..."
                class="form-control"
                required="true"
                data-parsley-minlength="6"
              />
            </div>
            <div class="form-group">
              <h5>
                <label for="email">Email</label>
              </h5>
              <input
                type="email"
                name="email"
                value=""
                id="email"
                placeholder="Enter your email..."
                class="form-control"
                required="true"
                data-parsley-minlength="6"
              />
            </div>
            <div class="form-group">
              <h5>
                <label for="password">Password</label>
              </h5>
              <input
                type="password"
                name="password"
                value=""
                id="password"
                placeholder="Enter your password..."
                class="form-control"
                required="true"
                data-parsley-minlength="6"
              />
            </div>
    
            <button
              type="submit"
              name="button"
              class="btn btn-success mt-1"
              value="Upload"
            >
              Save
            </button>
          </form>
        </div>
        <!-- /.card-body -->
      </div>
    </div>

    <%-include('../views/partials/footer'); %>
    <%-include('../views/partials/scripts'); %>
  </body>
</html>
